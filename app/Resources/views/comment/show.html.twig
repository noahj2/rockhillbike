{% extends 'adminBase.html.twig' %}

{% block body %}
    <h1>Comment</h1>

        <label>Name:</label> {{ comment.name }}<br>
        <label>Message:</label> {{ comment.message }}<br>
        <label>Image:</label> {{ comment.image }}<br>
        <label>Date:</label> {% if comment.date %}{{ comment.date|date('m-d-y H:i') }}{% endif %}<br>
        <label>Trail:</label> {{ comment.trail }}<br>
        <label>Email:</label> {{ comment.email }}<br>
        <label>Approved?:</label> {% if comment.isApproved %}Yes{% else %}No{% endif %}
    <ul>
        <li>
            <a href="{{ path('admin_comment_edit', { 'id': comment.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('admin_comment_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
