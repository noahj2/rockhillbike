{% extends 'base.html.twig' %}

{% block body %}
    
    <a href="{{ path('announcement_index') }}">Announcement</a> | 
    <a href="{{ path('admin_comment_index') }}">Comments</a> | 
    <a href="{{ path('admin_event_index') }}">Events</a> | 
    <a href="{{ path('admin_wellnesstip_index') }}">Wellness Tips</a> | 
    <a href="{{ path('location_index') }}">Locations</a> | 
    <a href="{{ path('news_index') }}">News</a> | 
    <a href="{{ path('admin_poi_type_index') }}">POI Types</a> | 
    <a href="{{ path('admin_trail_index') }}">Trails</a> | 
    <a href="{{ path('admin_pointsofinterest_index') }}">Points Of Interest</a>
    
    <h1>Trails List</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Length</th>
                <th>Type</th>
                <th>Caloriesburnedmale</th>
                <th>Caloriesburnedfemale</th>
                <th>Surfacetype</th>
                <th>Description</th>
                <th>Photo1</th>
                <th>Photo2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trail in trails %}
            <tr>
                <td>{{ trail.name }}</td>
                <td>{{ trail.length }}</td>
                <td>{{ trail.type }}</td>
                <td>{{ trail.caloriesBurnedMale }}</td>
                <td>{{ trail.caloriesBurnedFemale }}</td>
                <td>{{ trail.surfaceType }}</td>
                <td>{{ trail.description }}</td>
                <td>{{ trail.photo1 }}</td>
                <td>{{ trail.photo2 }}</td>
                <td>
                    <div>
                        <a href="{{ path('admin_trail_edit', { 'id': trail.id }) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <div><br><br>
        <a href="{{ path('admin_trail_new') }}">Create New Entry</a>
    </div>
{% endblock %}
