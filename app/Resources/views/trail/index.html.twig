{% extends 'adminBase.html.twig' %}

{% block body %} 
    <h1>Trails List</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Length</th>
                <th>Type</th>
                <th>CaloriesBurned(M)</th>
                <th>CaloriesBurned(F)</th>
                <th>SurfaceType</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trail in trails %}
            <tr>
                <td>{{ trail.name }}</td>
                <td>{{ trail.length }}</td>
                <td>{{ trail.type }}</td>
                <td>{{ trail.caloriesBurnedMale }}</td>
                <td>{{ trail.caloriesBurnedFemale }}</td>
                <td>{{ trail.surfaceType }}</td>
                <td>{{ trail.description }}</td>
                <td>{{ trail.photo1 }}</td>
                <td>
                    <div>
                        <a href="{{ path('admin_trail_edit', { 'id': trail.id }) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <div><br>
         <ul>
            <li>
                <a href="{{ path('admin_trail_new') }}">Create New Entry</a>
            </li>
        </ul>
    </div>
{% endblock %}
