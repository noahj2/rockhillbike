{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trail</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trail.name }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ trail.length }}</td>
            </tr>
            <tr>
                <th>Caloriesburnedmale</th>
                <td>{{ trail.caloriesBurnedMale }}</td>
            </tr>
            <tr>
                <th>Caloriesburnedfemale</th>
                <td>{{ trail.caloriesBurnedFemale }}</td>
            </tr>
            <tr>
                <th>Surfacetype</th>
                <td>{{ trail.surfaceType }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trail.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trail_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trail_edit', { 'id': trail.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
