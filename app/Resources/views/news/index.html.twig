{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('announcement_index') }}">Announcement</a> | 
    <a href="{{ path('admin_comment_index') }}">Comments</a> | 
    <a href="{{ path('admin_event_index') }}">Events</a> | 
    <a href="{{ path('admin_wellnesstip_index') }}">Wellness Tips</a> | 
    <a href="{{ path('location_index') }}">Locations</a> | 
    <a href="{{ path('news_index') }}">News</a> | 
    <a href="{{ path('admin_poi_type_index') }}">POI Types</a> | 
    <a href="{{ path('admin_trail_index') }}">Trails</a> | 
    <a href="{{ path('admin_pointsofinterest_index') }}">Points Of Interest</a>
    
    <h1>News List</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date/Time</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.name }}</td>
                <td>{{ news.description }}</td>
                <td>{% if news.dateTime %}{{ news.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ news.photo }}</td>
                <td>
                    <div>
                        <a href="{{ path('news_edit', { 'id': news.id }) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div><br><br>
            <a href="{{ path('news_new') }}">Create New Entry</a>
        </div>
{% endblock %}
