{% extends 'base.html.twig' %}

{% block body %}
    <h1>Announcement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ announcement.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ announcement.message }}</td>
            </tr>
            <tr>
                <th>Iscurrent</th>
                <td>{% if announcement.isCurrent %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('announcement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('announcement_edit', { 'id': announcement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
