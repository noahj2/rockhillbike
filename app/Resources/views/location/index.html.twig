    <h1>Locations List</h1>

    <table>
        <thead>
            <tr>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <div>
                        <a href="{{ path('location_edit', { 'id': location.id }) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <div><br>
         <ul>
            <li>
                <a href="{{ path('location_new') }}">Create New Entry</a>
            </li>
        </ul>
