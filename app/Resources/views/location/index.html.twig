{% extends 'adminBase.html.twig' %}

{% block title %}Location Index{% endblock %}

{% block body %} 

    <h4>Locations List</h4><br>

    
    {% for location in locations %}
        <label>Latitude:</label> {{ location.latitude }}<br>
        <label>Longitude:</label> {{ location.longitude }}<br>
        <div>
            <a href="{{ path('location_edit', { 'id': location.id }) }}">Edit</a>
        </div><br>
    {% endfor %}

     <div><br>
         <ul>
            <li>
                <a href="{{ path('location_new') }}">Create New Entry</a>
            </li>
        </ul>
    </div>
{% endblock %}
