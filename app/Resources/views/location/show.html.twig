{% extends 'adminBase.html.twig' %}

{% block title %}Location Show{% endblock %}

{% block body %}

    <h4>Location</h4><br>
    
    <label>ID: </label> {{ location.id }}<br>
    <label>Latitude:</label> {{ location.latitude }}<br>
    <label>Longitude:</label> {{ location.longitude }}<br>
    
    <ul>
        <li>
            <a href="{{ path('location_edit', { 'id': location.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('location_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
