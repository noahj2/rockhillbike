{% extends 'adminBase.html.twig' %}

{% block body %}  
    <h1>Points of Interest Types List</h1>

    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pOI_TYPE in pOI_TYPEs %}
            <tr>
                <td>{{ pOI_TYPE.type }}</td>
                <td>
                    <div>
                        <a href="{{ path('admin_poi_type_edit', { 'id': pOI_TYPE.id }) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <div><br>
         <ul>
            <li>
                <a href="{{ path('admin_poi_type_new') }}">Create New Entry</a>
            </li>
        </ul>
    </div>
{% endblock %}
